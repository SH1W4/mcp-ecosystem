# MCP Ecosystem Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Database Configuration (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/mcp_ecosystem
# REDIS_URL=redis://localhost:6379

# Security Configuration
# JWT_SECRET=your-jwt-secret-here
# ENCRYPTION_KEY=your-encryption-key-here

# MCP Server Configuration
MCP_SERVER_TIMEOUT=30000
MCP_MAX_CONNECTIONS=100

# Python Core Configuration
PYTHON_CORE_PATH=./core/python
PYTHON_VIRTUALENV=.venv

# Rust Core Configuration
RUST_CORE_PATH=./core/rust
RUST_LOG=info

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Configuration
DEBUG=false
DEVELOPMENT_MODE=true

# External Services
# WEBHOOK_URL=https://your-webhook-url.com
# NOTIFICATION_SERVICE_URL=https://notifications.example.com

